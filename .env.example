# Guardian Environment Configuration
# Copy this file to .env and fill in the actual values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development  # Options: development, staging, production

# =============================================================================
# AGENT ADDRESSES (populated after deployment to Agentverse)
# =============================================================================
# These addresses are generated when agents are deployed to Agentverse
# Update these values after running deployment scripts

CORRELATION_AGENT_ADDRESS=agent1qw...  # CorrelationAgent address from Agentverse
SECTOR_AGENT_ADDRESS=agent1qx...       # SectorAgent address from Agentverse
GUARDIAN_AGENT_ADDRESS=agent1qy...     # Guardian address from Agentverse

# =============================================================================
# AGENTVERSE CONFIGURATION
# =============================================================================
# Agentverse deployment credentials (if using CLI deployment)
AGENTVERSE_API_KEY=your_api_key_here  # Optional: for automated deployment

# =============================================================================
# DATA PATHS (relative to project root)
# =============================================================================
DEMO_WALLETS_PATH=data/demo_wallets.json
HISTORICAL_CRASHES_PATH=data/historical_crashes.json
SECTOR_MAPPINGS_PATH=data/sector_mappings.json
METTA_KNOWLEDGE_PATH=data/metta_knowledge/

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Timeout settings (in seconds)
AGENT_RESPONSE_TIMEOUT=10
END_TO_END_TIMEOUT=60

# Correlation threshold for high-risk detection (percentage)
HIGH_CORRELATION_THRESHOLD=85

# Sector concentration threshold for warnings (percentage)
HIGH_SECTOR_CONCENTRATION_THRESHOLD=60

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/guardian.log

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test mode uses mock data and shorter timeouts
TEST_MODE=false
TEST_TIMEOUT=5

# =============================================================================
# EXTERNAL SERVICES (if needed post-MVP)
# =============================================================================
# Uncomment and fill if integrating external services in future
# COINGECKO_API_KEY=your_coingecko_key_here
# ETHERSCAN_API_KEY=your_etherscan_key_here
